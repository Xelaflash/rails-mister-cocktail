<div class="container cocktail-index">
  <% if user_signed_in? && current_user.admin? %>
    <div class="create-cocktail-wrapper">
      <%= link_to "Create a cocktail", new_cocktail_path, class: "gradient-button" %>
    </div>
  <% end %>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-md-6 col-lg-4 col-xl-3" data-aos="zoom-in-up">
        <% if cocktail.photo.attached? %>
          <% background_url = cl_image_path cocktail.photo.key, width: 250, height: 250, crop: :fill %>
        <% else %>
          <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
        <% end %>
        <%= link_to cocktail_path(cocktail), class: 'card' do %>
          <div class="card-hero" style="background-image: linear-gradient(rgba(0,0,0,0.05), rgba(0,0,0,0.15)), url('<%= background_url %>');">
          </div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
