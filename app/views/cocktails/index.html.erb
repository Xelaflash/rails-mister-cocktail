
<div class="container index">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-3">
        <div class="card">
          <%= cl_image_tag cocktail.picture, height: 300, width: 400, crop: :thumb, class: "card-picture" %>
          <div class="card-info">
            <h5><%= cocktail.name %></h5>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


