<div class="cocktail-container">
        <%= link_to 'Back', cocktails_path, class: "back btn btn-success hidden-xs" %>
  <div class="row">
    <div class=" items col-xs-12 col-sm-6">
      <div class="items-left">
        <h1><%= @cocktail.name %></h1>
        <%= cl_image_tag @cocktail.picture, height: 380, width: 470, crop: :fill, class: "cocktail-picture hidden-xs"%>
        <ul class="ingredients-list list-unstyled">
          <% @cocktail.doses.each do |dose| %>
            <li><%= link_to dose.ingredient.name, ingredient_path(dose.ingredient) %> : <%= dose.description %> <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
          <% end %>
        </ul>
      </div>

      <hr>

      <div class="simple_form dose">
        <h4>Create your recipe</h4>
          <%= simple_form_for([@cocktail, @dose]) do |f| %>
            <%= f.input :description %>
            <%= f.input :ingredient_id, collection: @ingredients %>
            <%= f.button :submit, class: "btn btn-primary" %>
          <% end %>
        <br>
      </div>
    </div>
  </div>
</div>
