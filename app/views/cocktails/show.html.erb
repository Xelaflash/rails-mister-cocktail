<div class="show-page">
  <div class="cocktail-show-banner">
    <h2>Cocktail</h2>
    <div class="sep"></div>
    <h1><%= @cocktail.name %></h1>
  </div>
  <div class="cocktail-section container">
    <div class="cocktail-picture">
      <%= cl_image_tag @cocktail.photo.key, width: 350, crop: :fill %>
    </div>
    <div class="cocktail-description">
      <div class="cocktail-description-card">
        <h2>Ingredients</h2>
        <div class="card-sep"></div>
      </div>
      <div class="cocktail-description-card">
        <h2>Recipe</h2>
        <div class="card-sep"></div>
        <div class="recipe_steps">
          <% @cocktail.fix_string.each_with_index do |step, index| %>
            <p class="step">
              <span class="step-nbr">0<%= index + 1 %></span>
              <span class="step-item"><%= step %></span>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="ingredients-form">
    <% if user_signed_in? && current_user.admin? %>
      <hr>
      <h3>Only for admin</h3>
      <ul class="ingredients-list">
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> <strong> <%= link_to dose.ingredient.name, ingredient_path(dose.ingredient)%></strong> <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: 'card-delete' %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <hr>
  <div class="right-section col-md-12 hidden-xs">
    <h4>Add ingredients & Dose</h4>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description, required: true, label: "Dose", placeholder: "2cl" %>
      <%= f.input :ingredient_id, collection: @ingredients, prompt: 'Select the ingredient' %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="-ingredients-create">
    <h4>Don't find the ingredients? Create it (or go to admin panel)</h4>
    <%= simple_form_for [@cocktail, @ingredient] do |f| %>
      <%= f.input :name, required: true, label: "Ingredient", placeholder: "Lime Juice" %>
      <%= f.input :tag_list, collection: [ "Spirit", "Soft Drinks", "Modifier", "Garnish" ], prompt: 'Select the category'%>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
</div>
</div>
