<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag @cocktail.picture, height: 350, width: 450, crop: :fit %>
      <ul class="list-unstyled">
        <% @cocktail.doses.each do |dose| %>
    <li><%= link_to dose.ingredient.name, ingredient_path(dose.ingredient) %> : <%= dose.description %> <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
        <% end %>
      </ul>

      <hr>

      <div class="simple_form">
        <h4>Create your recipe</h4>
          <%= simple_form_for([@cocktail, @dose]) do |f| %>
            <%= f.input :description %>
            <%= f.input :ingredient_id, collection: @ingredients %>
          <%= f.button :submit, class: "btn btn-primary" %>
          <% end %>
          <br>
          <%= link_to 'Back', cocktails_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
