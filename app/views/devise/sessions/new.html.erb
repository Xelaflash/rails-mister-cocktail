<div class="log-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mx-auto">
        <div class="form-login">
          <h2>Sign In</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <div class="row">
                <div class="col-lg-8 mx-auto">
                  <%= f.input :email, required: true, autofocus: true, placeholder: "bob@gmail.com" %>
                  <%= f.input :password, label: "Password", required: true, placeholder: "•••••••••" %>
                  <%= f.input :remember_me,label: "Remember me", as: :boolean if devise_mapping.rememberable? %>
                </div>
              </div>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign In", class: "btn btn-primary" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
